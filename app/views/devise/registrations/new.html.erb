<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
<div class="col-xs-4">
 <div class="form-group">
  
    <%= f.text_field :username, autofocus: true, class: "form-control half-width", placeholder: "Username" %>
  </div>

  <div class="form-group">
    
    <%= f.email_field :email, class: "form-control half-width", placeholder: "Email" %>
  half
  <div class="form-group">
    
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control half-width", placeholder: "Password" %>
  </div>

  <div class="form-group">
    
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control half-width", placeholder: "Confirm Password" %>
  </div>


  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>

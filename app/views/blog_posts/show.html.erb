	<p id="notice"><%= notice %></p>

	<div class="panel panel-primary">
		<div class="panel-heading">
			<%= @blog_post.title %>
			</div>
			<div class="panel-body">
				<p>by <%= link_to @blog_post.user.username, user_posts_path(id: @blog_post.user.id) %></p>
				posted at: <%= @blog_post.created_at.strftime('%m/%d/%Y at %I:%M%p') %><br>
				<p><%= @blog_post.blog_entry %></p>

			</div>
	</div>

	<div class="panel panel-success">
		<div class="panel-heading">
			Make a Comment
		</div>
		<div class="panel-body">
		<%= render 'comments/form' %>
	</div>
	</div>

	<div class="panel panel-default">
		<div class="panel-header">
			<h4>Comments</h4>
		</div>
		<% @blog_post.comments.each do |comment| %>
		<div class="panel-body">
			<p><strong><%= link_to comment.user.username, user_posts_path(id: comment.user.id) %></strong></p>
			posted at: <%= comment.created_at.strftime('%m/%d/%Y at %H:%M:%S') %><br>
			<p><%= comment.comment_entry %></p>
		</div>
		<% end %>
	</div>
<% if current_user.id == @blog_post.user.id %>
<%= link_to 'Edit', edit_blog_post_path(@blog_post) %> |
<% end %>

<%= link_to 'Back', blog_posts_path %>


